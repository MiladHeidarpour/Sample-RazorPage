@page
@model Shop.RazorPage.Pages.Auth.LoginModel
@{
    Layout = "Shared/Layout/_AuthLayout";
    ViewData["Title"] = "ورود به سایت";
}
<div class="auth-form shadow-around">
    <div class="site-logo">
        <a href="/">
            <img src="/assets/images/logo.png" alt="logo">
        </a>
    </div>
    <div class="auth-form-title">
        @ViewData["Title"]
    </div>
    <form method="post">
        @Html.HiddenFor(m=>m.RedirectTo)

        @Html.EditorFor(m => m.PhoneNumber)
        @Html.EditorFor(m => m.Password)

        <span class="d-flex justify-content-between">
            <span></span>
            <a href="#" class="link--with-border-bottom">رمز عبور خود را فراموش کرده‌ام</a>
        </span>

        <div class="form-element-row">
            <label class="container-checkbox">
                مرا به خاطر داشته باش
                <input type="checkbox" checked="checked">
                <span class="checkmark"></span>
            </label>
        </div>
        <div class="form-element-row text-left">
            <button class="btn-element btn-info-element">
                <i class="fad fa-sign-in-alt"></i>
                ورود به همتا
            </button>
        </div>

    </form>
    <div class="auth-form-footer">
        <span>کاربر جدید هستید؟</span>
        <a asp-page="Register" class="link--with-border-bottom">ثبت نام در همتا</a>
    </div>
</div>
@page
@using Shop.RazorPage.Infrastructure
@using Shop.RazorPage.Models.Response.Roles
@model Shop.RazorPage.Pages.Admin.Roles.AddModel
@{
    ViewData["Selected"] = "Roles";
    ViewData["Title"] = "افزودن نقش";
}

<h3>@ViewData["Title"]</h3>

<form class="card" method="post">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                @Html.EditorFor(m => m.Title)
            </div>
            <div class="col-md-6">
                <label>انتخاب دسترسی ها</label>
                <select class="select2 form-control" multiple="" name="permission[]">
                    @foreach (var item in Enum.GetNames(typeof(Permission)))
                    {
                        <option value="@item">@item.Replace("_", " ")</option>
                    }
                </select>
            </div>
            <div class="card-footer text-right">
                <cancel></cancel>
                <submit />
            </div>
        </div>
    </div>
</form>

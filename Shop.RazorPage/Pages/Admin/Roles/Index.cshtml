@page
@model Shop.RazorPage.Pages.Admin.Roles.IndexModel
@{
    ViewData["Title"] = "مدیریت نقش ها";
    ViewData["Selected"] = "Roles";
}
<h3>@ViewData["Title"]</h3>
<a asp-page="Add" class="btn btn-success mb-2">افزودن نقش</a>
<div class="table-responsive card card-body p-0">
    <table class="table table-bordered mb-0">
        <thead>
            <tr>
                <th>#</th>
                <th>عنوان</th>
                <th>عملیات</th>
        </thead>
        <tbody>
        @foreach (var item in Model.Roles)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-page="Edit" asp-route-id="@item.Id">ویرایش</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>